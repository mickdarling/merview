{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": "off",
    "semi": "off",
    "no-unused-vars": ["warn"],
    "no-console": "off"
  },
  "globals": {
    "marked": "readonly",
    "mermaid": "readonly",
    "Prism": "readonly",
    "DOMPurify": "readonly",
    "CodeMirror": "readonly",
    "hljs": "readonly",
    "expandMermaid": "readonly"
  }
}
